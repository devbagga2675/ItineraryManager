<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the item -->
    <solid android:color="#FFFFFF" /> <!-- You can change this color to suit your design -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional: Border for the item -->
    <stroke
        android:width="1dp"
        android:color="#D08058" /> <!-- Optional, gives a border color -->

    <!-- Optional: Padding inside the item -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />
</shape>
