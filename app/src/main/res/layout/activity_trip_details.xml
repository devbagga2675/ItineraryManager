<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F5F9"
    android:padding="16dp"
    android:layout_marginTop="40dp">

    <!-- Trip Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:elevation="4dp"

        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/trip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRIP NAME"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#D08058"/>



            <TextView
                android:id="@+id/trip_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26/07/2025 to 30/07/2025"
                android:textColor="#7C7C7C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/align"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daman, India"
                android:textColor="#7C7C7C"
                android:textSize="14sp" />

        <TextView
            android:id="@+id/trip_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Members >"
            android:textColor="#7C7C7C"
            android:layout_marginVertical="5dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/trip_documents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents >"
            android:layout_marginVertical="5dp"
            android:textColor="#7C7C7C"
            android:textSize="14sp" />
        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/edit_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Details"
                android:backgroundTint="#155E63"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/delete_trip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete Trip"
                android:backgroundTint="#D08058"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Days List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Day 1 -->
        <TextView
            android:id="@+id/day_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day 1"
            android:textSize="18sp"
            android:textColor="#D08058"
            android:background="@drawable/list_item_background"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Day 2 -->
        <TextView
            android:id="@+id/day_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day 2"
            android:textSize="18sp"
            android:textColor="#D08058"
            android:background="@drawable/list_item_background"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Day 3 -->
        <TextView
            android:id="@+id/day_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day 3"
            android:textSize="18sp"
            android:textColor="#D08058"
            android:background="@drawable/list_item_background"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

</LinearLayout>
