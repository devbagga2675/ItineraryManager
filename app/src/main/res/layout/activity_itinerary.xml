<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F5F9"
    android:fitsSystemWindows="true">

    <!-- Header Section -->
    <TextView
        android:id="@+id/dayHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAY 1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FBA834"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />  <!-- Orange color for the header -->


    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26/07/2025"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp" />

    <!-- Add Activity Button -->
    <Button
        android:id="@+id/addActivityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#106396"
        android:text="Add Activity"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/> <!-- Dark blue button -->


    <!-- Activity Card 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/card_background"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp">  <!-- Shadow effect -->
     <!-- Use a drawable for rounded corners -->

        <!-- Activity Title and Status Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">  <!-- Space between title and status -->

            <!-- Activity Title -->
            <TextView
                android:id="@+id/activityTitle1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Departure from Vadodara"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="4dp"
                android:textColor="#e29578"/>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/activityStatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Started"
                android:textSize="12sp"
                android:padding="4dp"
                android:textColor="@android:color/white"
                android:background="@drawable/status_background_planned"
                android:layout_marginStart="8dp" />  <!-- A custom drawable for rounded corners -->

        </LinearLayout>
  <!-- Orange color for activity title -->


    <TextView
        android:id="@+id/activityDetails1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26/07/2025    07:00 AM\nBus Station, Vadodara"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/activityCost1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$35"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="8dp" />

    <!-- Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Documents Button -->
        <Button
            android:id="@+id/documentsButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Documents"
            android:textSize="14sp"
            android:backgroundTint="#106396"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            android:padding="0dp"/>
        <!-- Dark teal for button -->

        <!-- Edit Details Button -->
        <Button
            android:id="@+id/editDetailsButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Details"
            android:textSize="14sp"
            android:padding="0dp"
            android:backgroundTint="#106396"        android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" /> <!-- Dark blue for button -->




        <!-- Remove Button -->
        <Button
            android:id="@+id/removeButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remove"
            android:backgroundTint="#D08058"
            android:textAllCaps="false"
            android:padding="0dp"
            android:textSize="14dp"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp" />  <!-- Orange for button -->

    </LinearLayout>
</LinearLayout>

    <!-- Repeat similar structure for Activity Card 2 -->

    </LinearLayout>
