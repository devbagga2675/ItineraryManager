<!-- trip_card.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/trip_card_background"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:layout_gravity="center">

    <!-- Trip Name and Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|end">

        <TextView
            android:id="@+id/tripNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#D2691E" />

        <TextView
            android:id="@+id/tripStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/status_background_planned"
            android:padding="4dp"
            android:text="Planned"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Trip Date Range -->
    <TextView
        android:id="@+id/tripDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26/07/2025 to 30/07/2025"
        android:textColor="#7D7D7D"
        android:layout_marginTop="8dp" />

    <!-- Trip Location -->
    <TextView
        android:id="@+id/tripLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daman, India"
        android:textColor="#7D7D7D"
        android:layout_marginTop="4dp" />

    <!-- View Button -->
    <Button
        android:id="@+id/viewTripButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D08058"
        android:layout_marginTop="12dp" />
</LinearLayout>
